{
    "require" : {
        "php": ">=5.3.0",
        "raveren/kint" : "*",
        "laravel/framework" : "*",
        "j4mie/idiorm" : "*",
        "mustache/mustache" : "*",
        "slim/slim" : "*",
        "slim/extras" : "*",
        "phpunit/phpunit": "3.7.*",
        "way/generators": "dev-master",
        "cartalyst/sentry": "2.0.*"
    },
    "require-dev": {
        "way/generators": "dev-master"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ],
        "psr-0" : {
            "arx/core" : "_vendor"
        },
        "files" : [
            "_vendor/arx/core/core.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev"
}